<%- include('partials/header', { title: title }) %>
<%- include('partials/navbar') %>

<div class="container">
    <!-- Mensajes Flash -->
    <% if (success_msg) { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <%= success_msg %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    <% } %>
    
    <% if (error_msg) { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <%= error_msg %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    <% } %>

    <div class="row">
        <!-- Estadísticas -->
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-graph-up"></i> Estadísticas</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-2">
                        <span>Total Ofertas:</span>
                        <span class="badge bg-primary"><%= estadisticas.totalOfertas %></span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Empresas Únicas:</span>
                        <span class="badge bg-success"><%= estadisticas.empresasUnicas %></span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Salario Promedio:</span>
                        <span class="badge bg-warning text-dark">S/<%= estadisticas.salarioPromedio %></span>
                    </div>
                </div>
            </div>
            
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="bi bi-lightning-charge"></i> Acciones Rápidas</h5>
                </div>
                <div class="card-body">
                    <a href="/crud/nuevo" class="btn btn-success w-100 mb-2">
                        <i class="bi bi-plus-circle"></i> Crear Nueva Oferta
                    </a>
                    <a href="/crud" class="btn btn-primary w-100 mb-2">
                        <i class="bi bi-gear"></i> Gestión CRUD
                    </a>
                    <a href="/listado" class="btn btn-secondary w-100">
                        <i class="bi bi-list-check"></i> Ver Todas las Ofertas
                    </a>
                </div>
            </div>
        </div>

        <!-- Últimas Ofertas -->
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="bi bi-clock-history"></i> Últimas Ofertas</h5>
                </div>
                <div class="card-body">
                    <% if (ultimasOfertas.length > 0) { %>
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Puesto</th>
                                        <th>Empresa</th>
                                        <th>Salario</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% ultimasOfertas.forEach(oferta => { %>
                                        <tr>
                                            <td><span class="badge bg-secondary">#<%= oferta.NroId %></span></td>
                                            <td><strong><%= oferta.Puesto %></strong></td>
                                            <td><%= oferta.Empresa.RazonSoc %></td>
                                            <td class="text-success fw-bold">S/<%= oferta.PagoMensual %></td>
                                            <td>
                                                <a href="/crud/editar/<%= oferta.NroId %>" class="btn btn-sm btn-outline-primary">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                        <a href="/listado" class="btn btn-outline-primary w-100 mt-2">
                            Ver todas las ofertas <i class="bi bi-arrow-right"></i>
                        </a>
                    <% } else { %>
                        <div class="text-center py-4">
                            <i class="bi bi-inbox display-1 text-muted"></i>
                            <h5 class="mt-3">No hay ofertas disponibles</h5>
                            <p class="text-muted">Crea tu primera oferta de trabajo</p>
                            <a href="/crud/nuevo" class="btn btn-primary">
                                <i class="bi bi-plus-circle"></i> Crear Primera Oferta
                            </a>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>